<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="20dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/ndk_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"/>


    <Button
        android:id="@+id/ndk_calutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="计算"
        android:textColor="#f00"/>

    <Button
        android:id="@+id/ndk_fix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我被修复了"/>

    <com.example.liangge.rxjavatest.ui.view.UnreadMessageView
        android:id="@+id/ndk_custom"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_phone_icons_left"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/scroll_forward"
            android:visibility="visible"
            />

        <HorizontalScrollView
            android:id="@+id/ndk_hs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ndk_hs_ll"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                ></LinearLayout>
        </HorizontalScrollView>

        <!--<HorizontalScrollView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:scrollbars="none">-->

        <!--<LinearLayout-->
        <!--android:id="@+id/ndk_ll_container"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="center"-->
        <!--android:gravity="center_vertical"-->
        <!--android:orientation="horizontal"/>-->
        <!--</HorizontalScrollView>-->

        <ImageView
            android:id="@+id/iv_phone_icons"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/scroll_back"/>
    </LinearLayout>
</LinearLayout>