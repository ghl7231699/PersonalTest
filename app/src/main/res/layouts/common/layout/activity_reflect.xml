<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/reflect_construct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取构造方法"/>

            <TextView
                android:id="@+id/reflect_content_construct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <Button
                android:id="@+id/reflect_filed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="成员变量"/>

            <TextView
                android:id="@+id/reflect_content_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <Button
                android:id="@+id/reflect_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="成员方法"/>

            <TextView
                android:id="@+id/reflect_content_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <Button
                android:id="@+id/reflect_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="泛型"/>

            <TextView
                android:id="@+id/reflect_content_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>