    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.SchedulerActivity"/>
        <activity android:name=".ui.activity.MapActivity"/>
        <activity android:name=".ui.activity.AuthCodeActivity"/>
        <activity android:name=".ui.activity.baseactivity.BaseActivity"/>
        <activity
