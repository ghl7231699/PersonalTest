        <activity android:name=".ui.activity.RxjavaActivity"/>
        <activity android:name=".ui.activity.PaintViewActivity"/>
        <activity android:name=".ui.activity.OkHttpActivity"/>
        <activity android:name=".ui.activity.HotFixActivity"/>
        <activity android:name=".ui.activity.InterviewActivity"/>
        <activity android:name=".ui.activity.RetrofitActivity"/>
        <activity android:name=".ui.activity.RecyclerViewActivity"/>
        <activity android:name=".ui.activity.ResultActivity"/>
        <activity android:name=".ui.activity.ProxyActivity"/>

        <service
            android:name=".service.MessengerService"
            android:process=":remote"/>

        <activity android:name=".ui.activity.SlideActivity">
        </activity>
    </application>

</manifest>