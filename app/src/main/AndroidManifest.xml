            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ui.activity.FruitActivity"/>
        <activity android:name=".ui.activity.UserInfoActivity">
        </activity>
        <activity android:name=".ui.activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.MainActivity"/>
        <activity android:name=".ui.activity.WelcomeActivity">
        </activity>
        <activity android:name=".ui.activity.PdfActivity"/>
        <activity android:name=".ui.activity.baseactivity.PdfDownLoadActivity">
        </activity>
        <activity android:name=".ui.activity.RxDownLoadActivity"/>
        <activity
